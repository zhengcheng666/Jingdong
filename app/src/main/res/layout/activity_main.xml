<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <FrameLayout
        android:id="@+id/fl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/xian"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </FrameLayout>

   <LinearLayout
       android:id="@+id/xian"
       app:layout_constraintBottom_toBottomOf="parent"
       android:layout_width="match_parent"
       android:layout_height="60dp">

       <RadioGroup
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <RadioButton
               android:text="首页"
               android:gravity="center"
               android:drawableTop="@drawable/choose"
               android:id="@+id/bt_1"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"/>
           <RadioButton
               android:text="专题"
               android:gravity="center"
               android:drawableTop="@drawable/choose_2"
               android:id="@+id/bt_2"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"/>
           <RadioButton
               android:text="分类"
               android:gravity="center"
               android:drawableTop="@drawable/choose_3"
               android:id="@+id/bt_3"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"/>
           <RadioButton
               android:text="购物车"
               android:gravity="center"
               android:drawableTop="@drawable/choose_4"
               android:id="@+id/bt_4"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"/>
           <RadioButton
               android:text="我的"
               android:textColor="@drawable/textcolor"
               android:gravity="center"
               android:drawableTop="@drawable/choose_5"
               android:id="@+id/bt_5"
               android:layout_weight="1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:button="@null"/>
       </RadioGroup>
   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>